<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <!-- العنوان الرئيسي -->
      <div class="text-center mb-5">
        <h1 class="display-4 text-primary">اتصل بنا</h1>
        <p class="lead">نحن هنا لمساعدتك في أي استفسار</p>
      </div>

      <div class="row">
        <!-- معلومات التواصل -->
        <div class="col-lg-6 mb-5">
          <div class="card h-100 shadow">
            <div class="card-header bg-primary text-white text-center">
              <h4><i class="fas fa-info-circle me-2"></i>معلومات التواصل</h4>
            </div>
            <div class="card-body">
              <div class="contact-info">
                <div class="d-flex align-items-center mb-4">
                  <div class="icon-circle bg-primary text-white me-3">
                    <i class="fas fa-user"></i>
                  </div>
                  <div>
                    <h6 class="mb-1">المطور</h6>
                    <p class="mb-0">Monther Jbawi</p>
                  </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                  <div class="icon-circle bg-success text-white me-3">
                    <i class="fas fa-phone"></i>
                  </div>
                  <div>
                    <h6 class="mb-1">رقم الهاتف</h6>
                    <p class="mb-0">00491629045696</p>
                  </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                  <div class="icon-circle bg-info text-white me-3">
                    <i class="fas fa-envelope"></i>
                  </div>
                  <div>
                    <h6 class="mb-1">البريد الإلكتروني</h6>
                    <p class="mb-0">info@wasalani.com</p>
                  </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                  <div class="icon-circle bg-warning text-white me-3">
                    <i class="fas fa-map-marker-alt"></i>
                  </div>
                  <div>
                    <h6 class="mb-1">الموقع</h6>
                    <p class="mb-0">درعا - سوريا، دمشق - سوريا</p>
                  </div>
                </div>

                <div class="d-flex align-items-center">
                  <div class="icon-circle bg-dark text-white me-3">
                    <i class="fas fa-code"></i>
                  </div>
                  <div>
                    <h6 class="mb-1">التطوير</h6>
                    <p class="mb-0">تم إنشاء وتطوير المنصة بواسطة Monther Jbawi</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- نموذج التواصل -->
        <div class="col-lg-6 mb-5">
          <div class="card h-100 shadow">
            <div class="card-header bg-success text-white text-center">
              <h4><i class="fas fa-paper-plane me-2"></i>أرسل رسالة</h4>
            </div>
            <div class="card-body">
              <%= form_with(url: "#", local: true, class: "contact-form") do |form| %>
                <div class="mb-3">
                  <%= form.label :name, "الاسم الكامل", class: "form-label" %>
                  <%= form.text_field :name, class: "form-control", required: true %>
                </div>

                <div class="mb-3">
                  <%= form.label :email, "البريد الإلكتروني", class: "form-label" %>
                  <%= form.email_field :email, class: "form-control", required: true %>
                </div>

                <div class="mb-3">
                  <%= form.label :subject, "الموضوع", class: "form-label" %>
                  <%= form.select :subject, [
                    ['استفسار عام', 'general'],
                    ['مشكلة تقنية', 'technical'],
                    ['اقتراح', 'suggestion'],
                    ['شكوى', 'complaint'],
                    ['تعاون', 'partnership']
                  ], {}, class: "form-select" %>
                </div>

                <div class="mb-3">
                  <%= form.label :message, "الرسالة", class: "form-label" %>
                  <%= form.text_area :message, rows: 5, class: "form-control", required: true %>
                </div>

                <div class="d-grid">
                  <%= form.submit "إرسال الرسالة", class: "btn btn-primary btn-lg" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- خرائط ومواعيد العمل -->
      <div class="row">
        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-header bg-info text-white text-center">
              <h4><i class="fas fa-clock me-2"></i>مواعيد العمل</h4>
            </div>
            <div class="card-body">
              <div class="working-hours">
                <div class="d-flex justify-content-between border-bottom py-2">
                  <span>الأحد - الخميس:</span>
                  <span class="fw-bold">8:00 ص - 5:00 م</span>
                </div>
                <div class="d-flex justify-content-between border-bottom py-2">
                  <span>الجمعة:</span>
                  <span class="fw-bold">إجازة</span>
                </div>
                <div class="d-flex justify-content-between py-2">
                  <span>السبت:</span>
                  <span class="fw-bold"> 10:00 ص - 2:00 م</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-header bg-warning text-white text-center">
              <h4><i class="fas fa-globe me-2"></i>المناطق التي نغطيها</h4>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <i class="fas fa-city text-primary me-2"></i>دمشق وريفها
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-success me-2"></i>درعا وريفها
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-info me-2"></i>حمص
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-warning me-2"></i>حماه
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-danger me-2"></i>حلب
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-primary me-2"></i>اللاذقية
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-success me-2"></i>طرطوس
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-info me-2"></i>السويداء
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-warning me-2"></i>القنيطرة
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-danger me-2"></i>دير الزور
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-primary me-2"></i>الحسكة
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-success me-2"></i>الرقة
                </li>
                <li class="list-group-item">
                  <i class="fas fa-city text-info me-2"></i>إدلب
                </li>
              </ul>

              <!-- ملاحظة -->
              <div class="alert alert-info mt-3 mb-0">
                <i class="fas fa-info-circle me-2"></i>
                <small>نعمل على توسعة خدماتنا لتشمل جميع المدن السورية</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- وسائل التواصل الاجتماعي -->
      <div class="row mt-5">
        <div class="col-12">
          <div class="text-center">
            <h3 class="mb-4">تابعنا على وسائل التواصل الاجتماعي</h3>
            <div class="d-flex justify-content-center gap-3">
              <a href="#" class="btn btn-primary btn-lg rounded-circle">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="btn btn-info btn-lg rounded-circle">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="btn btn-danger btn-lg rounded-circle">
                <i class="fab fa-instagram"></i>
              </a>
              <a href="#" class="btn btn-success btn-lg rounded-circle">
                <i class="fab fa-whatsapp"></i>
              </a>
              <a href="#" class="btn btn-dark btn-lg rounded-circle">
                <i class="fab fa-github"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- روابط سريعة -->
      <div class="text-center mt-5">
        <%= link_to 'الصفحة الرئيسية', root_path, class: 'btn btn-outline-primary me-2' %>
        <%= link_to 'عن المنصة', about_path, class: 'btn btn-outline-secondary me-2' %>
        <%= link_to 'كيف تعمل', how_it_works_path, class: 'btn btn-outline-info' %>
      </div>
    </div>
  </div>
</div>

<style>
.icon-circle {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.contact-info .d-flex {
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.contact-info .d-flex:last-child {
  border-bottom: none;
}

.contact-form .form-label {
  font-weight: 600;
  color: #2c3e50;
}

.working-hours .d-flex {
  padding: 10px 0;
}

.btn.rounded-circle {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card {
  transition: transform 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
}

.list-group-item {
  border: none;
  padding: 0.75rem 0;
}

.list-group-item:first-child {
  padding-top: 0;
}

.list-group-item:last-child {
  padding-bottom: 0;
}

.fas.fa-city {
  font-size: 1.1em;
}
</style>
